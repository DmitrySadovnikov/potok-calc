<p id="notice"><%= notice %></p>

<div class="container">
  <div class="col-xs-12">
    <h1>Компании</h1>

    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Money</th>
        <th>Term</th>
        <th>Annual rate</th>
        <th>Period</th>
        <th>Default rate</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.money %></td>
            <td><%= company.term %></td>
            <td><%= company.annual_rate %></td>
            <td><%= company.period %></td>
            <td><%= company.default_rate %></td>
            <td><%= link_to 'Show', company %></td>
            <td><%= link_to 'Edit', edit_company_path(company) %></td>
            <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Company', new_company_path %>

  </div>
</div>
